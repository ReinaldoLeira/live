<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
<%- include partials/header.ejs %>

<style>
    h1 {
        font-size: 30px;
    }

    li {
        font-size: 18px;
    }
</style>

<div class="container">
    <% if (receita) { %>
        <h1><%= receita[0].nome %></h1>
        <hr />
        <% const ingredientes = receita[0].ingredientes.split('\n') %>
        <ul>
            <% for (const ingrediente of ingredientes) { %>
                <li><%= ingrediente %></li>
            <% } %>
        </ul>
    <% } %>
    <p>O tempo de preparo é <%= receita[0].preparo%> minutos</p>
    <p>Serve <%= receita[0].porcoes%> porções</p>
</div>
